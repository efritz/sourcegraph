  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/ioredis": "^4.0.15",
    "@types/node-resque": "^5.4.1",
    "@types/temp": "^0.8.34",
    "async-exit-hook": "^2.0.1",
    "bloomfilter": "^0.0.18",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "ioredis": "^4.14.0",
    "lsif-protocol": "0.4.3",
    "mz": "^2.7.0",
    "node-resque": "^5.5.5",
    "sqlite3": "^4.1.0",
    "temp": "^0.9.0",
    "typeorm": "^0.2.18",
    "vscode-languageserver": "^5.2.1",
    "yallist": "^3.0.3"
  },
  "devDependencies": {
    "@types/bloomfilter": "^0.0.0",
    "@types/body-parser": "1.17.0",
    "@types/express": "4.17.0",
    "@types/mz": "0.0.32",
    "@types/yallist": "^3.0.1",
    "parcel-bundler": "^1.12.3",
    "tsc-watch": "^2.2.1",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "typecheck": "tsc -p .",
    "serve:server": "tsc-watch --noEmit --onSuccess \"bash -c 'yarn run build:server && node out/server.bundle.js'\" --noClear",
    "serve:worker": "tsc-watch --noEmit --onSuccess \"bash -c 'yarn run build:worker && node out/worker.bundle.js'\" --noClear",
    "build:server": "parcel build --out-dir out --out-file server.bundle.js --target node src/server.ts",
    "build:worker": "parcel build --out-dir out --out-file worker.bundle.js --target node src/worker.ts",
    "tslint": "../node_modules/.bin/tslint -p tsconfig.json",
    "eslint": "../node_modules/.bin/eslint 'src/**/*.ts?(x)'"
  }
}
